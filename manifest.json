{
    "manifest_version": 2,
    "name": "Zubizi New Tab",
    "description": "Zubizi Chrome Ext",
    "version": "1.2",
    "author": "Sariful Islam",
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": "logo.png",
        "default_title": "Have a good day"
    },
    "icons": {
        "16": "logo.png",
        "48": "logo.png",
        "128": "logo.png"
    },
    "chrome_url_overrides": {
        "newtab": "newtab.html"
    },
    "permissions": [
        "activeTab",
        "storage",
        "alarms",
        "tabs",
        "notifications"
    ],
    "background": {
        "scripts": [
            "assets/js/background.js"
        ],
        "persistent": false
    }
}